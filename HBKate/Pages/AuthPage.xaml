<Page x:Class="HBKate.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HBKate.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Happy Birthday Program">

    <StackPanel HorizontalAlignment="Center">
        <Image Height="150" Source="/HBKate;component/Resources/happy-birthday.png"/>
        <TextBlock Text="Войти в программу?" Foreground="Red" FontSize="30"/>
        <Button x:Name="btYes" Content="ДА" Margin="5" Padding="5" FontSize="26" Click="btYes_Click"/>
        <Button x:Name="btNo" Content="НЕТ" Margin="5" Padding="5" FontSize="26" Click="btNo_Click"/>
    </StackPanel>
</Page>
